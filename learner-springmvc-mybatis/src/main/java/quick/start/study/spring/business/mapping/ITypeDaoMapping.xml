<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="quick.start.study.spring.business.dao.ITypeDao">

    <insert id="addType" parameterType="quick.start.study.spring.business.entity.Type">
        insert into  type (typeId,typeName,delFlag) values (#{typeId},#{typeName},#{delFlag})
    </insert>
    
    <select id="getAllTypeList" resultType="quick.start.study.spring.business.entity.Type">
        select * from type where delFlag = 0
    </select>
    
    <delete id="byIdDeleteType" parameterType="map">
      delete from type
      <where>
          typeId = #{typeId, jdbcType=VARCHAR}
      </where>
    </delete>
    
    <select id="byIdQueryType" resultType="quick.start.study.spring.business.entity.Type">
      select * from new where delFlag = 0 and newId = #{newId, jdbcType=VARCHAR}
    </select>
    
     <update id="editType" parameterType="map">
      update type
      <set>
        typeName = #{typeName, jdbcType=VARCHAR}
      </set>
      <where>
        typeId = #{typeId, jdbcType=VARCHAR}
      </where>
  </update>

</mapper>